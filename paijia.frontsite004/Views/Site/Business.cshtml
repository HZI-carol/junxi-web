@section scripts {
    <script type="text/javascript" src="/Content/js/pages/business.js"></script>
    @{
        Html.RenderPartial("~/Views/Shared/_VueBase.cshtml");
    }

    <script type="text/javascript">
        (function () {
            var showLoading = function () {
                return ELEMENT.Loading.service({
                    lock: true,
                    background: 'rgba(0, 0, 0, 0.7)'
                })
            }
            var closeLoading = function (loading) {
                if (loading) {
                    loading.close()
                }
            }
            var loading = null;
            new Vue({
                el: "#app",
                data() {
                    return {
                        name: "",
                        phone: ""
                    }
                },
                methods: {
                    validate() {
                        if (!this.name) {
                            return "请输入姓名"
                        }
                        if (!this.phone) {
                            return "请输入手机号"
                        }
                        if (!/^1[345678]\d{9}$/g.test(this.phone)) {
                            return "手机号格式不正确";
                        }
                        return "";
                    },
                    submit() {
                        var self = this
                        var error = this.validate();
                        if (error) {
                            this.$message.error(error)
                            return;
                        }
                        $.ajax({
                            url: "https://www.vgoyun.com/api/web/intentions",
                            @*url: "http://localhost:59359/api/web/intentions",*@
                            method: "POST",
                            dataType: "json",
                            contentType: 'application/json',
                            data: JSON.stringify({
                                name: self.name,
                                phone: self.phone,
                                intentions: [1, 2, 3],
                                remark: "维构全景前端004 - 加入我们"
                            }),
                            beforeSend: function (jqXHR, settings) {
                                loading = showLoading();
                            },
                            success: function (res) {
                                if (res.code == 200) {
                                    self.$message.success("提交成功，我们会尽快联系您！");
                                    self.phone = "";
                                    self.name = "";
                                } else {
                                    self.$message.error(res.msg)
                                }
                            },
                            complete: function (jqXHR, textStatus) {
                                closeLoading(loading);
                            },
                            error: function (jqXHR, textStatus, errorThrown) {
                                if (textStatus == "parsererror") {
                                    self.$message.error("解析结果错误请稍后再试");
                                } else {
                                    self.$message.error("网络异常请稍后再试");
                                }
                            }
                        })

                    }
                }
            })
        })();
    </script>
}