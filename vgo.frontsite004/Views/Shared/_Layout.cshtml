            var _53code = document.createElement("script");
            _53code.src = "https://tb.53kf.com/code/code/10196728/1";
            var s = document.getElementsByTagName("script")[0];
            s.parentNode.insertBefore(_53code, s);
        })();
    </script>
</body>
</html>
