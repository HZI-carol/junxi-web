<!--轮播图-->
<div style="width: 100%;height: 610px;overflow: hidden; position: relative;">
    <div class="swiper-container" id="swiper1">
        <div class="swiper-wrapper" style="width: 100%;height: 610px">
            @if (ViewBag.BannersList != null)
            {
                foreach (Banners item in ViewBag.BannersList)
                {
                    <div class="swiper-slide">
                        <a href="@item.linkurl" target="_blank"><img src="@item.full_imgurl" /></a>
                    </div>
                }
            }
        </div>
        <div class="swiper-pagination" id="swiper1-pagination"></div>
        <div class="swiper-button-prev" id="swiper1-button-prev"></div>
        <div class="swiper-button-next" id="swiper1-button-next"></div>
    </div>
</div>
