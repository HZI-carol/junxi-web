@{
    ViewBag.Title = "新闻资讯";
    ViewBag.Menu = "/news";
}
@using zg.frontsite
@{
    var news = Model as News;
    ViewBag.Title = "新闻资讯 - " + news.title;
}

@section head {
    <link rel="stylesheet" type="text/css" href="~/Content/css/pages/news-inner.css" />
}

<!--页面主体-->
<div id="main">

    <!-- 新闻资讯内页 -->
    <div class="module-con con news-inner">
        <div class="wrap">
            <div class="module-news-title">
                <h3>@news.title</h3>
            </div>

            <div class="module-news-content">
                <h4>@news.title</h4>
                <div class="module-company">
                    <i class="iconfont icon-usercenter"></i>
                    <div>
                        <span>@news.author</span>
                        <i class="iconfont icon-v"></i>
                    </div>
                </div>
                <div class="module-history">
                    <p>
                        @Html.Raw(news.content)
                    </p>
                </div>

                <div class="module-news-footer">
                    <div class="module-news-status">
                        <span>@news.created.ToString("yyyy-MM-dd")</span>
                        <div>
                            <ul>
                                <li>
                                    <i class="iconfont icon-yuedu"></i>
                                    <span>@news.seecount</span>
                                </li>
                                <li>
                                    <i class="iconfont icon-dianzan1"></i>
                                    <span>@news.praisecount</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                    @*<div class="module-news-praise">
                            <div>
                                <i class="iconfont icon-dianzan1"></i>
                            </div>
                            <span>点个赞呗！</span>
                        </div>*@
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" src="/Content/js/pages/news.js"></script>